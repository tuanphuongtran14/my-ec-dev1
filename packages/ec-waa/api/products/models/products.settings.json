{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Products",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 10,
      "unique": true
    },
    "price": {
      "type": "biginteger",
      "required": true,
      "min": "0"
    },
    "category": {
      "via": "products",
      "model": "categories"
    },
    "colors": {
      "type": "json",
      "required": true
    },
    "versions": {
      "type": "json",
      "required": true
    },
    "promotions": {
      "type": "richtext",
      "required": true
    },
    "condition": {
      "type": "richtext",
      "required": true
    },
    "boxIncluded": {
      "type": "richtext",
      "required": true
    },
    "warranty": {
      "type": "richtext",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "rating": {
      "type": "decimal",
      "required": false,
      "min": 0,
      "max": 5
    },
    "votes": {
      "type": "integer",
      "min": 0
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "salespercentage": {
      "type": "integer",
      "min": 0,
      "max": 100,
      "default": 0
    },
    "specification": {
      "type": "richtext"
    },
    "slug": {
      "type": "string"
    },
    "quantity": {
      "type": "integer",
      "default": 50,
      "required": true,
      "min": 0
    },
    "sold": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 0
    },
    "color": {
      "type": "component",
      "repeatable": true,
      "component": "product-options.product-color"
    }
  }
}
