{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Products",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 10,
      "unique": true
    },
    "price": {
      "type": "biginteger",
      "required": true,
      "min": "0"
    },
    "category": {
      "via": "products",
      "model": "categories"
    },
    "promotions": {
      "type": "richtext",
      "required": true
    },
    "condition": {
      "type": "richtext",
      "required": true
    },
    "boxIncluded": {
      "type": "richtext",
      "required": true
    },
    "warranty": {
      "type": "richtext",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "salespercentage": {
      "type": "integer",
      "min": 0,
      "max": 100,
      "default": 0
    },
    "slug": {
      "type": "string"
    },
    "cart_items": {
      "via": "product",
      "collection": "cart-item"
    },
    "dimensions": {
      "type": "component",
      "repeatable": false,
      "component": "specifications.dimensions",
      "required": true
    },
    "build": {
      "type": "component",
      "repeatable": false,
      "component": "specifications.build",
      "required": true
    },
    "weight": {
      "type": "decimal"
    },
    "screen": {
      "type": "component",
      "repeatable": false,
      "component": "specifications.screen",
      "required": true
    },
    "cpu": {
      "type": "string"
    },
    "gpu": {
      "type": "string"
    },
    "battery": {
      "type": "component",
      "repeatable": false,
      "required": true,
      "component": "specifications.battery"
    },
    "platform": {
      "type": "component",
      "repeatable": false,
      "required": true,
      "component": "specifications.platform"
    },
    "mainCamera": {
      "type": "component",
      "repeatable": true,
      "component": "specifications.camera"
    },
    "selfieCamera": {
      "type": "component",
      "repeatable": true,
      "component": "specifications.camera"
    },
    "othersFeatures": {
      "type": "component",
      "repeatable": true,
      "component": "specifications.feature"
    },
    "colors": {
      "type": "component",
      "repeatable": true,
      "component": "specifications.color"
    },
    "memory": {
      "type": "component",
      "repeatable": false,
      "required": true,
      "component": "specifications.memory"
    }
  }
}
